<div class="finder">
  <h1><%= @article.name %> <a class="save" href="/wiki/<%= URI.escape @article.name %>">Save</a></h1>
  <nav class="in">
    <h2>Links In</h2>
    <ul>
      <% @article.inlinks.each do |title| %>
        <li>
          <a href="/wiki/<%= URI.escape title %>"><%= title %></a>
          <ul>
            <li><a href="#">Influenced</a></li>
            <li><a href="#">Influenced By</a></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </nav>
  <nav class="out">
    <h2>Links Out</h2>
    <ul>
      <% @article.outlinks.each do |title| %>
        <li>
          <a href="/wiki/<%= URI.escape title %>"><%= title %></a>
          <ul>
            <li><a href="#">Influenced</a></li>
            <li><a href="#">Influenced By</a></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </nav>
</div>


<hr class="hide">

<section class="article-text">
  <%= @article.html %>
</section>

<script type="text/javascript">

  // Do it once we've saved the article.
  $('a.save').live('click', function() {
    var article = urlToArticle($(this).attr('href'));
    article.save();

    findSaved();

    return false;
  });

  // Find any already-saved links once at startup.
  findSaved();

</script>

<!DOCTYPE html>
<html>

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <title><%= @title %> | Weaver</title>
  <meta name="robots" content="all">
  <link rel="stylesheet" href="/base.css" media="screen">
  <script type="text/javascript" src="/jquery-1.6.2.min.js"></script>
  <script type="text/javascript" src="/weaver.js"></script>
  <script type="text/javascript" src="/weaver/storage.js"></script>
  <script type="text/javascript" src="/weaver/article.js"></script>
  <script type="text/javascript" src="/weaver/ui.js"></script>
</head>

<body>

  <header>
    <section>
      <nav>
        <ul>
          <li><a href="/stories/new">New story</a></li>
          <li><a href="/stories/">Stories</a></li>
          <li><a id="storyMode"></a></li>
        </ul>
      </nav>
      <h1><a href="/wiki/Jacquard%20loom">Weaver</a></h1>
    </section>
  </header>

  <%= yield %>

</body>

<script type="text/javascript">
$(function () {

  if (localStorage.storyMode === 'true') {
    $(".finder").css('height', '100%');
    $("#storyMode").html("⬆");
  } else {
    $(".finder").css('height', '200px');
    $("#storyMode").html("⬇");
  }

  $("#storyMode").click(function () {
    if (localStorage.getItem('storyMode') === 'true') {
      $(".finder").css('height', '200px');
      $("#storyMode").html("⬇");
      localStorage.setItem('storyMode', false);
    } else {
      $(".finder").css('height', '100%');
      $("#storyMode").html("⬆");
      localStorage.setItem('storyMode', 'true');
    }
  });

});
</script>

</html>
